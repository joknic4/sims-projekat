<Window x:Class="HotelReservationSystem.Views.VlasnikWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HotelReservationSystem.Views"
        xmlns:vm="clr-namespace:HotelReservationSystem.ViewModels"
        Title="Portal za vlasnike" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:VlasnikViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <TextBlock Text="PORTAL ZA VLASNIKE" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                <Button Content="Odjavi se" 
                        HorizontalAlignment="Right"
                        Background="#f44336"
                        Foreground="White"
                        Command="{Binding LogoutCommand}"/>
            </Grid>
        </Border>
        
        <TabControl Grid.Row="1" Margin="10">
            
            <TabItem Header="Moji hoteli">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="200"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                            <Button Content="Učitaj hotele" Command="{Binding LoadHoteliCommand}" Margin="5"/>
                            <Button Content="Odobri hotel" Command="{Binding ApproveHotelCommand}" 
                                    Background="#4CAF50" Foreground="White" Margin="5"/>
                            <Button Content="Odbij hotel" Command="{Binding RejectHotelCommand}" 
                                    Background="#f44336" Foreground="White" Margin="5"/>
                        </StackPanel>
                        
                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding MojiHoteli}"
                                  SelectedItem="{Binding SelectedHotel}"
                                  AutoGenerateColumns="True"
                                  Margin="10"/>
                        
                        <GroupBox Grid.Row="2" Header="Apartmani izabranog hotela" Margin="10">
                            <StackPanel>
                                <Button Content="Učitaj apartmane" 
                                        Command="{Binding LoadApartmaniCommand}"
                                        Margin="5"
                                        Background="#2196F3"
                                        Foreground="White"/>
                                <DataGrid ItemsSource="{Binding Apartmani}"
                                          AutoGenerateColumns="True"
                                          Height="130"/>
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                    
                    <GroupBox Grid.Column="1" Header="Dodaj novi apartman" Margin="10">
                        <StackPanel Margin="10">
                            <Label Content="Ime apartmana:" FontWeight="Bold"/>
                            <TextBox Text="{Binding ApartmanIme, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
                            
                            <Label Content="Opis:" FontWeight="Bold"/>
                            <TextBox Text="{Binding ApartmanOpis, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="80" 
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True"
                                     Margin="0,0,0,10"/>
                            
                            <Label Content="Broj soba:" FontWeight="Bold"/>
                            <TextBox Text="{Binding ApartmanBrojSoba, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
                            
                            <Label Content="Max broj gostiju:" FontWeight="Bold"/>
                            <TextBox Text="{Binding ApartmanMaxGostiju, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
                            
                            <Button Content="Kreiraj apartman" 
                                    Command="{Binding CreateApartmanCommand}"
                                    Margin="0,20,0,0"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Padding="10"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <TabItem Header="Rezervacije">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Button Content="Učitaj rezervacije" Command="{Binding LoadRezervacijeCommand}"/>
                        <TextBlock Text="(Trenutno se prikazuju sve rezervacije)" 
                                   VerticalAlignment="Center" 
                                   Margin="20,0,0,0"
                                   Foreground="Gray"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Rezervacije}"
                              SelectedItem="{Binding SelectedRezervacija}"
                              AutoGenerateColumns="True"
                              Margin="10"/>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                        <Button Content="Potvrdi rezervaciju" 
                                Command="{Binding ApproveRezervacijaCommand}"
                                Width="150"
                                Margin="5"
                                Background="#4CAF50"
                                Foreground="White"
                                Padding="10"/>
                        <Button Content="Odbij rezervaciju" 
                                Command="{Binding RejectRezervacijaCommand}"
                                Width="150"
                                Margin="5"
                                Background="#f44336"
                                Foreground="White"
                                Padding="10"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10">
            <TextBlock Text="{Binding StatusMessage}" FontSize="12"/>
        </Border>
    </Grid>
</Window>
