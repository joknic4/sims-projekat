<Window x:Class="HotelReservationSystem.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:HotelReservationSystem.ViewModels"
        Title="Registracija" 
        Height="550" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Window.DataContext>
        <vm:RegisterViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Naslov -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <TextBlock Text="REGISTRACIJA NOVOG GOSTA" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Forma -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,20">
                
                <Label Content="JMBG (13 cifara):" FontWeight="Bold"/>
                <TextBox Text="{Binding Jmbg, UpdateSourceTrigger=PropertyChanged}" MaxLength="13"/>
                
                <Label Content="Email:" FontWeight="Bold"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                
                <Label Content="Lozinka:" FontWeight="Bold"/>
                <PasswordBox x:Name="PasswordBox"/>
                
                <Label Content="Ime:" FontWeight="Bold"/>
                <TextBox Text="{Binding Ime, UpdateSourceTrigger=PropertyChanged}"/>
                
                <Label Content="Prezime:" FontWeight="Bold"/>
                <TextBox Text="{Binding Prezime, UpdateSourceTrigger=PropertyChanged}"/>
                
                <Label Content="Mobilni telefon:" FontWeight="Bold"/>
                <TextBox Text="{Binding MobilniTelefon, UpdateSourceTrigger=PropertyChanged}"/>
                
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red" 
                           Margin="5,10"
                           TextWrapping="Wrap"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Registruj se" 
                            Width="120" 
                            Background="#4CAF50"
                            Foreground="White"
                            Command="{Binding RegisterCommand}"
                            CommandParameter="{Binding ElementName=PasswordBox}"/>
                    
                    <Button Content="OtkaÅ¾i" 
                            Width="120" 
                            Background="#f44336"
                            Foreground="White"
                            Command="{Binding CancelCommand}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
