<Window x:Class="HotelReservationSystem.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:HotelReservationSystem.ViewModels"
        Title="Registracija" 
        Height="500" 
        Width="400"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:RegisterViewModel/>
    </Window.DataContext>
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="REGISTRACIJA NOVOG GOSTA" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <Label Content="JMBG:"/>
            <TextBox Text="{Binding Jmbg, UpdateSourceTrigger=PropertyChanged}"/>
            
            <Label Content="Email:"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
            
            <Label Content="Lozinka:"/>
            <PasswordBox x:Name="PasswordBox"/>
            
            <Label Content="Ime:"/>
            <TextBox Text="{Binding Ime, UpdateSourceTrigger=PropertyChanged}"/>
            
            <Label Content="Prezime:"/>
            <TextBox Text="{Binding Prezime, UpdateSourceTrigger=PropertyChanged}"/>
            
            <Label Content="Telefon:"/>
            <TextBox Text="{Binding MobilniTelefon, UpdateSourceTrigger=PropertyChanged}"/>
            
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="Red" 
                       Margin="5,10"
                       TextWrapping="Wrap"/>
            
            <Button Content="Registruj se" 
                    Margin="0,20,0,5"
                    Padding="10"
                    Command="{Binding RegisterCommand}"
                    CommandParameter="{Binding ElementName=PasswordBox}"/>
            
            <Button Content="OtkaÅ¾i" 
                    Padding="10"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
