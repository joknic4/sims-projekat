<Window x:Class="HotelReservationSystem.Views.GostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HotelReservationSystem.Views"
        xmlns:helpers="clr-namespace:HotelReservationSystem.Helpers"
        xmlns:vm="clr-namespace:HotelReservationSystem.ViewModels"
        Title="Portal za goste" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Value Converters -->
        <helpers:HotelSifraConverter x:Key="HotelSifraConverter"/>
        <helpers:HotelImeConverter x:Key="HotelImeConverter"/>
        <helpers:HotelGodinaConverter x:Key="HotelGodinaConverter"/>
        <helpers:HotelZvezdiceConverter x:Key="HotelZvezdiceConverter"/>
        <helpers:ApartmanImeConverter x:Key="ApartmanImeConverter"/>
        <helpers:ApartmanOpisConverter x:Key="ApartmanOpisConverter"/>
        <helpers:ApartmanSobeConverter x:Key="ApartmanSobeConverter"/>
        <helpers:ApartmanGostijuConverter x:Key="ApartmanGostijuConverter"/>
        <helpers:RezervacijaIdConverter x:Key="RezervacijaIdConverter"/>
        <helpers:RezervacijaDatumOdConverter x:Key="RezervacijaDatumOdConverter"/>
        <helpers:RezervacijaDatumDoConverter x:Key="RezervacijaDatumDoConverter"/>
        <helpers:RezervacijaStatusConverter x:Key="RezervacijaStatusConverter"/>
        <helpers:RezervacijaRazlogConverter x:Key="RezervacijaRazlogConverter"/>
    </Window.Resources>
    
    <Window.DataContext>
        <vm:GostViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <TextBlock Text="PORTAL ZA GOSTE" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                <Button Content="Odjavi se" 
                        HorizontalAlignment="Right"
                        Background="#f44336"
                        Foreground="White"
                        Command="{Binding LogoutCommand}"/>
            </Grid>
        </Border>
        
        <!-- TabControl -->
        <TabControl Grid.Row="1" Margin="10">
            
            <!-- Tab za pregled hotela -->
            <TabItem Header="Pregled hotela">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 Width="300" 
                                 Margin="5"
                                 VerticalContentAlignment="Center"/>
                        <Button Content="Pretraži po imenu" 
                                Command="{Binding SearchCommand}"/>
                        <Button Content="Prikaži sve" 
                                Command="{Binding LoadHoteliCommand}"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Hoteli}"
                              SelectedItem="{Binding SelectedHotel}"
                              Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Šifra" Binding="{Binding Path=., Converter={StaticResource HotelSifraConverter}}" Width="100"/>
                            <DataGridTextColumn Header="Ime" Binding="{Binding Path=., Converter={StaticResource HotelImeConverter}}" Width="*"/>
                            <DataGridTextColumn Header="Godina izgradnje" Binding="{Binding Path=., Converter={StaticResource HotelGodinaConverter}}" Width="120"/>
                            <DataGridTextColumn Header="Zvezdice" Binding="{Binding Path=., Converter={StaticResource HotelZvezdiceConverter}}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <GroupBox Grid.Row="2" Header="Apartmani izabranog hotela" Margin="10">
                        <DataGrid ItemsSource="{Binding Apartmani}"
                                  SelectedItem="{Binding SelectedApartman}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Ime" Binding="{Binding Path=., Converter={StaticResource ApartmanImeConverter}}" Width="150"/>
                                <DataGridTextColumn Header="Opis" Binding="{Binding Path=., Converter={StaticResource ApartmanOpisConverter}}" Width="*"/>
                                <DataGridTextColumn Header="Broj soba" Binding="{Binding Path=., Converter={StaticResource ApartmanSobeConverter}}" Width="80"/>
                                <DataGridTextColumn Header="Max gostiju" Binding="{Binding Path=., Converter={StaticResource ApartmanGostijuConverter}}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- Tab za rezervacije -->
            <TabItem Header="Nove rezervacije">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Prvo izaberite hotel i apartman u tabu 'Pregled hotela', zatim odaberite datume:" 
                               Margin="10" 
                               FontWeight="Bold"
                               TextWrapping="Wrap"/>
                    
                    <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Center">
                        <Label Content="Datum početka (od):" FontWeight="Bold"/>
                        <DatePicker SelectedDate="{Binding DatumOd}" 
                                    Height="30"
                                    Margin="5"/>
                        
                        <Label Content="Datum kraja (do):" FontWeight="Bold" Margin="0,20,0,0"/>
                        <DatePicker SelectedDate="{Binding DatumDo}" 
                                    Height="30"
                                    Margin="5"/>
                        
                        <Button Content="Kreiraj rezervaciju" 
                                Command="{Binding CreateRezervacijaCommand}"
                                Width="200"
                                Height="40"
                                Margin="0,30,0,0"
                                Background="#4CAF50"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <!-- Tab za moje rezervacije -->
            <TabItem Header="Moje rezervacije">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Label Content="Filter:" VerticalAlignment="Center" FontWeight="Bold"/>
                        <ComboBox SelectedItem="{Binding StatusFilter}" 
                                  Width="150"
                                  VerticalContentAlignment="Center">
                            <ComboBoxItem Content="Sve"/>
                            <ComboBoxItem Content="Na čekanju"/>
                            <ComboBoxItem Content="Potvrđeno"/>
                            <ComboBoxItem Content="Odbijeno"/>
                        </ComboBox>
                        <Button Content="Učitaj" 
                                Command="{Binding LoadRezervacijeCommand}"
                                Margin="10,0"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Rezervacije}"
                              SelectedItem="{Binding SelectedRezervacija}"
                              Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Path=., Converter={StaticResource RezervacijaIdConverter}}" Width="100"/>
                            <DataGridTextColumn Header="Datum od" Binding="{Binding Path=., Converter={StaticResource RezervacijaDatumOdConverter}}" Width="100"/>
                            <DataGridTextColumn Header="Datum do" Binding="{Binding Path=., Converter={StaticResource RezervacijaDatumDoConverter}}" Width="100"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Path=., Converter={StaticResource RezervacijaStatusConverter}}" Width="100"/>
                            <DataGridTextColumn Header="Razlog odbijanja" Binding="{Binding Path=., Converter={StaticResource RezervacijaRazlogConverter}}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <Button Grid.Row="2" 
                            Content="Otkaži rezervaciju" 
                            Command="{Binding CancelRezervacijaCommand}"
                            Width="150"
                            Margin="10"
                            Background="#f44336"
                            Foreground="White"/>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Status bar -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10">
            <TextBlock Text="{Binding StatusMessage}" FontSize="12"/>
        </Border>
    </Grid>
</Window>
