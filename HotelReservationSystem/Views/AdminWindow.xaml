<Window x:Class="HotelReservationSystem.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HotelReservationSystem.Views"
        xmlns:helpers="clr-namespace:HotelReservationSystem.Helpers"
        xmlns:vm="clr-namespace:HotelReservationSystem.ViewModels"
        Title="Portal za administratore" 
        Height="750" 
        Width="1100"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Value Converters -->
        <helpers:KorisnikJmbgConverter x:Key="KorisnikJmbgConverter"/>
        <helpers:KorisnikEmailConverter x:Key="KorisnikEmailConverter"/>
        <helpers:KorisnikImeConverter x:Key="KorisnikImeConverter"/>
        <helpers:KorisnikPrezimeConverter x:Key="KorisnikPrezimeConverter"/>
        <helpers:KorisnikTelefonConverter x:Key="KorisnikTelefonConverter"/>
        <helpers:HotelSifraConverter x:Key="HotelSifraConverter"/>
        <helpers:HotelImeConverter x:Key="HotelImeConverter"/>
        <helpers:HotelGodinaConverter x:Key="HotelGodinaConverter"/>
        <helpers:HotelZvezdiceConverter x:Key="HotelZvezdiceConverter"/>
        <helpers:HotelStatusConverter x:Key="HotelStatusConverter"/>
        <helpers:ApartmanImeConverter x:Key="ApartmanImeConverter"/>
        <helpers:ApartmanOpisConverter x:Key="ApartmanOpisConverter"/>
        <helpers:ApartmanSobeConverter x:Key="ApartmanSobeConverter"/>
        <helpers:ApartmanGostijuConverter x:Key="ApartmanGostijuConverter"/>
    </Window.Resources>
    
    <Window.DataContext>
        <vm:AdminViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#9C27B0" Padding="15">
            <Grid>
                <TextBlock Text="PORTAL ZA ADMINISTRATORE" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                <Button Content="Odjavi se" 
                        HorizontalAlignment="Right"
                        Background="#f44336"
                        Foreground="White"
                        Command="{Binding LogoutCommand}"/>
            </Grid>
        </Border>
        
        <!-- TabControl -->
        <TabControl Grid.Row="1" Margin="10">
            
            <!-- Tab za prikaz svih hotela -->
            <TabItem Header="Pregled svih hotela">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Pretraga -->
                    <GroupBox Header="Pretraga hotela" Grid.Row="0" Margin="10">
                        <StackPanel>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Label Content="Kriterijum pretrage:" Grid.Column="0" VerticalAlignment="Center"/>
                                <ComboBox Grid.Column="1" ItemsSource="{Binding SearchCriteriaOptions}" SelectedItem="{Binding SearchCriteria, Mode=TwoWay}" Margin="5">
                                </ComboBox>
                                
                                <TextBox Grid.Column="2" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="5" VerticalContentAlignment="Center"/>
                                
                                <Button Grid.Column="3" Content="Pretraži" Command="{Binding SearchHoteliCommand}" Width="100" Margin="5"/>
                            </Grid>
                            
                            <TextBlock FontSize="10" Margin="5" Foreground="Gray" TextWrapping="Wrap">
                                <Run Text="* Pretraga hotela po apartmanima:"/>
                                <LineBreak/>
                                <Run Text="  - Broj soba: traži hotele sa apartmanima koji imaju uneti broj soba (npr. '2')"/>
                                <LineBreak/>
                                <Run Text="  - Broj gostiju: traži hotele sa apartmanima koji primaju uneti broj gostiju (npr. '3')"/>
                                <LineBreak/>
                                <Run Text="  - Sobe + Gosti: kombinacija sa operatorima (npr. '2 &amp; 3' = 2 sobe I 3 gosta, '2 | 4' = 2 sobe ILI 4 gosta)"/>
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Sortiranje -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,0">
                        <Label Content="Sortiranje po zvezdicama:" VerticalAlignment="Center" FontWeight="Bold"/>
                        <ComboBox ItemsSource="{Binding SortOrderOptions}" SelectedItem="{Binding SortOrder, Mode=TwoWay}" Width="120" Margin="5">
                        </ComboBox>
                        <Button Content="Sortiraj" Command="{Binding SortHoteliCommand}" Margin="5"/>
                        <Button Content="Prikaži sve" Command="{Binding LoadSviHoteliCommand}" Margin="5"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="2" 
                              ItemsSource="{Binding SviHoteli}"
                              SelectedItem="{Binding SelectedHotelZaPrikaz, Mode=TwoWay}"
                              Margin="10"
                              AutoGenerateColumns="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Šifra" Binding="{Binding Path=., Converter={StaticResource HotelSifraConverter}}" Width="100"/>
                            <DataGridTextColumn Header="Ime" Binding="{Binding Path=., Converter={StaticResource HotelImeConverter}}" Width="*"/>
                            <DataGridTextColumn Header="Godina izgradnje" Binding="{Binding Path=., Converter={StaticResource HotelGodinaConverter}}" Width="120"/>
                            <DataGridTextColumn Header="Zvezdice" Binding="{Binding Path=., Converter={StaticResource HotelZvezdiceConverter}}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <GroupBox Grid.Row="3" Header="Apartmani izabranog hotela" Margin="10">
                        <DataGrid ItemsSource="{Binding ApartmaniZaPrikaz}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Ime" Binding="{Binding Path=., Converter={StaticResource ApartmanImeConverter}}" Width="150"/>
                                <DataGridTextColumn Header="Opis" Binding="{Binding Path=., Converter={StaticResource ApartmanOpisConverter}}" Width="*"/>
                                <DataGridTextColumn Header="Broj soba" Binding="{Binding Path=., Converter={StaticResource ApartmanSobeConverter}}" Width="80"/>
                                <DataGridTextColumn Header="Max gostiju" Binding="{Binding Path=., Converter={StaticResource ApartmanGostijuConverter}}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- Tab za registraciju vlasnika -->
            <TabItem Header="Registracija vlasnika">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <GroupBox Header="Unos novog vlasnika" Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Label Content="JMBG:" Grid.Row="0" Grid.Column="0"/>
                                    <TextBox Text="{Binding VlasnikJmbg}" Grid.Row="0" Grid.Column="1" Margin="5"/>
                                    
                                    <Label Content="Email:" Grid.Row="1" Grid.Column="0"/>
                                    <TextBox Text="{Binding VlasnikEmail}" Grid.Row="1" Grid.Column="1" Margin="5"/>
                                    
                                    <Label Content="Lozinka:" Grid.Row="2" Grid.Column="0"/>
                                    <PasswordBox x:Name="VlasnikPasswordBox" Grid.Row="2" Grid.Column="1" Margin="5"/>
                                    
                                    <Label Content="Ime:" Grid.Row="3" Grid.Column="0"/>
                                    <TextBox Text="{Binding VlasnikIme}" Grid.Row="3" Grid.Column="1" Margin="5"/>
                                    
                                    <Label Content="Prezime:" Grid.Row="4" Grid.Column="0"/>
                                    <TextBox Text="{Binding VlasnikPrezime}" Grid.Row="4" Grid.Column="1" Margin="5"/>
                                    
                                    <Label Content="Telefon:" Grid.Row="5" Grid.Column="0"/>
                                    <TextBox Text="{Binding VlasnikTelefon}" Grid.Row="5" Grid.Column="1" Margin="5"/>
                                    
                                    <Button Content="Registruj vlasnika" 
                                            Grid.Row="6" Grid.Column="1"
                                            Command="{Binding RegisterVlasnikCommand}"
                                            CommandParameter="{Binding ElementName=VlasnikPasswordBox}"
                                            HorizontalAlignment="Left"
                                            Width="200"
                                            Margin="5,15,5,5"
                                            Background="#4CAF50"
                                            Foreground="White"
                                            Height="35"/>
                                </Grid>
                            </GroupBox>
                            
                            <GroupBox Header="Lista vlasnika" Margin="0,20,0,0" Padding="10">
                                <DataGrid ItemsSource="{Binding Vlasnike}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          Height="200">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="JMBG" Binding="{Binding Path=., Converter={StaticResource KorisnikJmbgConverter}}" Width="120"/>
                                        <DataGridTextColumn Header="Email" Binding="{Binding Path=., Converter={StaticResource KorisnikEmailConverter}}" Width="*"/>
                                        <DataGridTextColumn Header="Ime" Binding="{Binding Path=., Converter={StaticResource KorisnikImeConverter}}" Width="100"/>
                                        <DataGridTextColumn Header="Prezime" Binding="{Binding Path=., Converter={StaticResource KorisnikPrezimeConverter}}" Width="100"/>
                                        <DataGridTextColumn Header="Telefon" Binding="{Binding Path=., Converter={StaticResource KorisnikTelefonConverter}}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <!-- Tab za unos hotela -->
            <TabItem Header="Unos hotela">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <GroupBox Header="Kreiranje novog hotela" Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Label Content="Šifra:" Grid.Row="0" Grid.Column="0"/>
                                    <TextBox Text="{Binding HotelSifra}" Grid.Row="0" Grid.Column="1" Margin="5" IsReadOnly="True" Background="LightGray"/>
                                    
                                    <Label Content="Ime hotela:" Grid.Row="1" Grid.Column="0"/>
                                    <TextBox Text="{Binding HotelIme}" Grid.Row="1" Grid.Column="1" Margin="5"/>
                                    
                                    <Label Content="Godina izgradnje:" Grid.Row="2" Grid.Column="0"/>
                                    <TextBox Text="{Binding HotelGodina}" Grid.Row="2" Grid.Column="1" Margin="5"/>
                                    
                                    <Label Content="Broj zvezdica:" Grid.Row="3" Grid.Column="0"/>
                                    <TextBox Text="{Binding HotelZvezdice}" Grid.Row="3" Grid.Column="1" Margin="5"/>
                                    
                                    <Label Content="JMBG vlasnika:" Grid.Row="4" Grid.Column="0"/>
                                    <TextBox Text="{Binding HotelVlasnikJmbg}" Grid.Row="4" Grid.Column="1" Margin="5"/>
                                    
                                    <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="5,15,5,5">
                                        <Button Content="Kreiraj hotel" 
                                                Command="{Binding CreateHotelCommand}"
                                                Width="150"
                                                Height="35"
                                                Background="#4CAF50"
                                                Foreground="White"
                                                Margin="0,0,10,0"/>
                                    </StackPanel>
                                </Grid>
                            </GroupBox>
                            
                            <GroupBox Header="Lista svih hotela" Margin="0,20,0,0" Padding="10">
                                <DataGrid ItemsSource="{Binding Hoteli}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          Height="200">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Šifra" Binding="{Binding Path=., Converter={StaticResource HotelSifraConverter}}" Width="100"/>
                                        <DataGridTextColumn Header="Ime" Binding="{Binding Path=., Converter={StaticResource HotelImeConverter}}" Width="*"/>
                                        <DataGridTextColumn Header="Godina" Binding="{Binding Path=., Converter={StaticResource HotelGodinaConverter}}" Width="80"/>
                                        <DataGridTextColumn Header="Zvezdice" Binding="{Binding Path=., Converter={StaticResource HotelZvezdiceConverter}}" Width="70"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Path=., Converter={StaticResource HotelStatusConverter}}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Status bar -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10">
            <TextBlock Text="{Binding StatusMessage}" FontSize="12"/>
        </Border>
    </Grid>
</Window>
