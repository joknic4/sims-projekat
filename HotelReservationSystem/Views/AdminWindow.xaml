<Window x:Class="HotelReservationSystem.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HotelReservationSystem.Views"
        xmlns:vm="clr-namespace:HotelReservationSystem.ViewModels"
        Title="Portal za administratore" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:AdminViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <TextBlock Text="PORTAL ZA ADMINISTRATORE" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                <Button Content="Odjavi se" 
                        HorizontalAlignment="Right"
                        Background="#f44336"
                        Foreground="White"
                        Command="{Binding LogoutCommand}"/>
            </Grid>
        </Border>
        
        <TabControl Grid.Row="1" Margin="10">
            
            <!-- Tab za registraciju vlasnika -->
            <TabItem Header="Registracija vlasnika">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <Label Content="JMBG (13 cifara):" FontWeight="Bold"/>
                        <TextBox Text="{Binding VlasnikJmbg, UpdateSourceTrigger=PropertyChanged}" MaxLength="13"/>
                        
                        <Label Content="Email:" FontWeight="Bold"/>
                        <TextBox Text="{Binding VlasnikEmail, UpdateSourceTrigger=PropertyChanged}"/>
                        
                        <Label Content="Lozinka:" FontWeight="Bold"/>
                        <PasswordBox x:Name="VlasnikPasswordBox"/>
                        
                        <Label Content="Ime:" FontWeight="Bold"/>
                        <TextBox Text="{Binding VlasnikIme, UpdateSourceTrigger=PropertyChanged}"/>
                        
                        <Label Content="Prezime:" FontWeight="Bold"/>
                        <TextBox Text="{Binding VlasnikPrezime, UpdateSourceTrigger=PropertyChanged}"/>
                        
                        <Label Content="Mobilni telefon:" FontWeight="Bold"/>
                        <TextBox Text="{Binding VlasnikTelefon, UpdateSourceTrigger=PropertyChanged}"/>
                        
                        <Button Content="Registruj vlasnika" 
                                Command="{Binding RegisterVlasnikCommand}"
                                CommandParameter="{Binding ElementName=VlasnikPasswordBox}"
                                Width="200"
                                Height="40"
                                Margin="0,20,0,0"
                                Background="#4CAF50"
                                Foreground="White"
                                FontWeight="Bold"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Tab za kreiranje hotela -->
            <TabItem Header="Kreiranje hotela">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="20">
                        <Label Content="Šifra hotela:" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="{Binding HotelSifra}" Width="200" IsReadOnly="True"/>
                            <Button Content="Generiši novu" Command="{Binding GenerateHotelCodeCommand}" Margin="10,0"/>
                        </StackPanel>
                        
                        <Label Content="Ime hotela:" FontWeight="Bold"/>
                        <TextBox Text="{Binding HotelIme, UpdateSourceTrigger=PropertyChanged}"/>
                        
                        <Label Content="Godina izgradnje:" FontWeight="Bold"/>
                        <TextBox Text="{Binding HotelGodina, UpdateSourceTrigger=PropertyChanged}"/>
                        
                        <Label Content="Broj zvezdica (1-5):" FontWeight="Bold"/>
                        <TextBox Text="{Binding HotelZvezdice, UpdateSourceTrigger=PropertyChanged}"/>
                        
                        <Label Content="JMBG vlasnika:" FontWeight="Bold"/>
                        <TextBox Text="{Binding HotelVlasnikJmbg, UpdateSourceTrigger=PropertyChanged}"/>
                        
                        <Button Content="Kreiraj hotel" 
                                Command="{Binding CreateHotelCommand}"
                                Width="200"
                                Height="40"
                                Margin="0,20,0,0"
                                Background="#4CAF50"
                                Foreground="White"
                                FontWeight="Bold"/>
                    </StackPanel>
                    
                    <GroupBox Grid.Column="1" Header="Registrovani vlasnici" Margin="10">
                        <StackPanel>
                            <Button Content="Učitaj vlasnike" Command="{Binding LoadVlasnikeCommand}" Margin="5"/>
                            <DataGrid ItemsSource="{Binding Vlasnike}" 
                                      Height="400"
                                      Margin="5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="JMBG" Binding="{Binding Path=., Converter={StaticResource KorisnikJmbgConverter}}" Width="*"/>
                                    <DataGridTextColumn Header="Ime" Binding="{Binding Path=., Converter={StaticResource KorisnikImePrezimeConverter}}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- Tab za pregled hotela -->
            <TabItem Header="Pregled svih hotela">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Button Grid.Row="0" Content="Učitaj sve hotele" 
                            Command="{Binding LoadHoteliCommand}"
                            Margin="10"
                            HorizontalAlignment="Left"/>
                    
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Hoteli}"
                              Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Šifra" Binding="{Binding Path=., Converter={StaticResource HotelSifraConverter}}" Width="100"/>
                            <DataGridTextColumn Header="Ime" Binding="{Binding Path=., Converter={StaticResource HotelImeConverter}}" Width="*"/>
                            <DataGridTextColumn Header="Godina" Binding="{Binding Path=., Converter={StaticResource HotelGodinaConverter}}" Width="80"/>
                            <DataGridTextColumn Header="Zvezdice" Binding="{Binding Path=., Converter={StaticResource HotelZvezdiceConverter}}" Width="80"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Path=., Converter={StaticResource HotelStatusConverter}}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
        
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10">
            <TextBlock Text="{Binding StatusMessage}" FontSize="12"/>
        </Border>
    </Grid>
    
    <Window.Resources>
        <local:KorisnikJmbgConverter x:Key="KorisnikJmbgConverter"/>
        <local:KorisnikImePrezimeConverter x:Key="KorisnikImePrezimeConverter"/>
        <local:HotelSifraConverter x:Key="HotelSifraConverter"/>
        <local:HotelImeConverter x:Key="HotelImeConverter"/>
        <local:HotelGodinaConverter x:Key="HotelGodinaConverter"/>
        <local:HotelZvezdiceConverter x:Key="HotelZvezdiceConverter"/>
        <local:HotelStatusConverter x:Key="HotelStatusConverter"/>
    </Window.Resources>
</Window>
