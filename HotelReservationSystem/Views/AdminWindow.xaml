<Window x:Class="HotelReservationSystem.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:HotelReservationSystem.ViewModels"
        Title="Administrator Panel" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:AdminViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <TextBlock Text="ADMINISTRATOR PANEL" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>
                <Button Content="Odjavi se" 
                        HorizontalAlignment="Right"
                        Background="#f44336"
                        Foreground="White"
                        Command="{Binding LogoutCommand}"/>
            </Grid>
        </Border>
        
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Registracija vlasnika">
                <StackPanel Margin="20">
                    <Label Content="JMBG:" FontWeight="Bold"/>
                    <TextBox Text="{Binding VlasnikJmbg}" MaxLength="13"/>
                    
                    <Label Content="Email:" FontWeight="Bold"/>
                    <TextBox Text="{Binding VlasnikEmail}"/>
                    
                    <Label Content="Lozinka:" FontWeight="Bold"/>
                    <PasswordBox x:Name="VlasnikPasswordBox"/>
                    
                    <Label Content="Ime:" FontWeight="Bold"/>
                    <TextBox Text="{Binding VlasnikIme}"/>
                    
                    <Label Content="Prezime:" FontWeight="Bold"/>
                    <TextBox Text="{Binding VlasnikPrezime}"/>
                    
                    <Label Content="Telefon:" FontWeight="Bold"/>
                    <TextBox Text="{Binding VlasnikTelefon}"/>
                    
                    <Button Content="Registruj vlasnika" 
                            Margin="0,20,0,0"
                            Background="#4CAF50"
                            Foreground="White"
                            Command="{Binding RegisterVlasnikCommand}"
                            CommandParameter="{Binding ElementName=VlasnikPasswordBox}"/>
                </StackPanel>
            </TabItem>
            
            <TabItem Header="Kreiranje hotela">
                <StackPanel Margin="20">
                    <Label Content="Å ifra hotela:" FontWeight="Bold"/>
                    <TextBox Text="{Binding HotelSifra}" IsReadOnly="True"/>
                    
                    <Label Content="Ime hotela:" FontWeight="Bold"/>
                    <TextBox Text="{Binding HotelIme}"/>
                    
                    <Label Content="Godina osnivanja:" FontWeight="Bold"/>
                    <TextBox Text="{Binding HotelGodina}"/>
                    
                    <Label Content="Broj zvezdica (1-5):" FontWeight="Bold"/>
                    <TextBox Text="{Binding HotelZvezdice}"/>
                    
                    <Label Content="JMBG vlasnika:" FontWeight="Bold"/>
                    <TextBox Text="{Binding HotelVlasnikJmbg}"/>
                    
                    <Button Content="Kreiraj hotel" 
                            Margin="0,20,0,0"
                            Background="#4CAF50"
                            Foreground="White"
                            Command="{Binding CreateHotelCommand}"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
