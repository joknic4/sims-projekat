<Window x:Class="HotelReservationSystem.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:HotelReservationSystem.ViewModels"
        Title="Prijava na sistem"
        Height="400"
        Width="450"
        MinHeight="400"
        MinWidth="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- header -->
            <RowDefinition Height="*"/>
            <!-- forma -->
            <RowDefinition Height="Auto"/>
            <!-- footer -->
        </Grid.RowDefinitions>

        <!-- Naslov -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <TextBlock Text="SISTEM ZA REZERVACIJU HOTELA"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Forma za login -->
        <Grid Grid.Row="1" Margin="40,20,40,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Email label -->
                <RowDefinition Height="Auto"/>
                <!-- Email textbox -->
                <RowDefinition Height="Auto"/>
                <!-- Lozinka label -->
                <RowDefinition Height="Auto"/>
                <!-- Lozinka box -->
                <RowDefinition Height="Auto"/>
                <!-- Error poruka -->
                <RowDefinition Height="Auto"/>
                <!-- Dugmad -->
                <RowDefinition Height="*"/>
                <!-- prazno / rastezanje -->
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Content="Email:" FontWeight="Bold"/>

            <TextBox Grid.Row="1"
                     x:Name="EmailTextBox"
                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                     Height="35"
                     FontSize="14"/>

            <Label Grid.Row="2"
                   Content="Lozinka:"
                   FontWeight="Bold"
                   Margin="0,15,0,0"/>

            <PasswordBox Grid.Row="3"
                         x:Name="PasswordBox"
                         Height="35"
                         FontSize="14"/>

            <TextBlock Grid.Row="4"
                       Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       Margin="5,10,5,0"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="5"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                <Button Content="Prijavi se"
                        Width="120"
                        Height="32"
                        FontSize="14"
                        Background="#4CAF50"
                        Foreground="White"
                        Command="{Binding LoginCommand}"
                        CommandParameter="{Binding ElementName=PasswordBox}"/>

                <Button Content="Registruj se"
                        Width="120"
                        Height="32"
                        FontSize="14"
                        Background="#2196F3"
                        Foreground="White"
                        Command="{Binding RegisterCommand}"
                        Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10">
            <TextBlock Text="Projekat iz predmeta Specifikacija i modeliranje softvera 2024/2025"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       Foreground="Gray"/>
        </Border>
    </Grid>
</Window>
