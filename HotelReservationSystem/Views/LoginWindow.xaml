<Window x:Class="HotelReservationSystem.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:HotelReservationSystem.ViewModels"
        Title="Prijava na sistem"
        Height="350"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <TextBlock Text="HOTEL RESERVATION SYSTEM"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Forma -->
        <StackPanel Grid.Row="1" Margin="30" VerticalAlignment="Center">
            <Label Content="Email:"/>
            <TextBox x:Name="EmailTextBox"
                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Lozinka:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBox"/>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       Margin="5,10,5,0"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"/>

            <Button Content="Prijavi se"
                    Margin="0,20,0,0"
                    Background="#4CAF50"
                    Foreground="White"
                    Command="{Binding LoginCommand}"
                    CommandParameter="{Binding ElementName=PasswordBox}"/>

            <Button Content="Registruj se"
                    Margin="0,10,0,0"
                    Background="#2196F3"
                    Foreground="White"
                    Command="{Binding RegisterCommand}"/>
        </StackPanel>
    </Grid>
</Window>
